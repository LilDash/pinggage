/* pages/me/index.wxss */
.container {
  background-color: #f6f8f9;
}

.flex-column {
  display: flex; 
  flex-direction: column;
}

.flex-row {
  display: flex; 
  flex-direction: row;
}

.section {
  width: 100%;
  margin: 0 0 12px 0;
  background-color: #ffffff;
}
.info-wrap {
  padding: 50rpx 38rpx;
  font-size:30rpx;
  color: #444444;
}

.user-info-wrap {
  text-align: center;
}
.user-info-wrap .avatar {
  width: 200rpx;
  height: 200rpx;
}

.user-info-profile {
  padding: 0 14px;
  color: #888888;
}

.user-info-name {
  font-size: 28rpx;
  color: #444444;
  padding: 0 0 4px 0;
}

.user-info-tripcount {
  font-size: 24rpx;
}
.user-info-rating {
  font-size: 24rpx;
}

.contact-info-wrap view,.mytrips-info-wrap view {
  display:inline-block;
}

.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
  position:absolute;
  right: 20px; 
  margin:10rpx 0px;
 
}