/* pages/trip/trip.wxss */
.container {
  background-color: #f6f8f9;
}

.flex-column {
  display: flex; 
  flex-direction: column;
}

.flex-row {
  display: flex; 
  flex-direction: row;
}

.section {
  width: 100%;
  margin: 0 0 12px 0;
  background-color: #ffffff;
}
.info-wrap {
  padding: 50rpx 38rpx;
  font-size:30rpx;
  color: #444444;
}
.trip-info-location {
  text-align: center;
}
.trip-info-location-city {
  display: inline-block;
  font-size: 38rpx;
  padding: 6px 10px;
  color: #444444;
  overflow: hidden;
  font-weight: 800;
  white-space:nowrap;   
  text-overflow: ellipsis; 
  max-width: 120rpx;
  vertical-align: middle;
}

.trip-info-location .flight-icon {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin: 0 20rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100%;
  vertical-align: middle;
}

.trip-info-time {
  text-align:center;
  margin:10px;

}

.trip-info-time-departure,.trip-info-time-pickup {
  margin: 0 20rpx;
}

.luggage-info-price {
  font-size:30rpx;
  line-height:28rpx;
  padding:0 0 30rpx 0;
}

.luggage-info-price-amount {
  font-size: 38rpx;
  color: rgba(230, 67, 64, 0.8);
}

.luggage-info-capacity {
  line-height: 18rpx;
}

.luggage-info-capacity-bar {
  width: 100%;
}

.luggage-info-capacity text {
  font-size: 30rpx;
}

.luggage-info-capacity .luggage-info-capacity-remain {
  font-size: 28rpx;
  color: rgba(230, 67, 64, 0.8);
}



.user-info-wrap .avatar {
  width: 100rpx;
  height: 100rpx;
}

.user-info-profile {
  padding: 0 14px;
  color: #888888;
}

.user-info-name {
  font-size: 28rpx;
  color: #444444;
  padding: 0 0 4px 0;
}

.user-info-tripcount {
  font-size: 24rpx;
}
.user-info-rating {
  font-size: 24rpx;
}
.user-info-publishtime {
  font-size: 22rpx;
}

.btn-wrap button {
  margin: 6px 0;
}