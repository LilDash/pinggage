/* pages/trip/trip.wxss */

.trip-info-location-city {
  display: inline-block;
  font-size: 38rpx;
  padding: 6px 10px;
  color: #444444;
  overflow: hidden;
  font-weight: 800;
  white-space:nowrap;   
  text-overflow: ellipsis; 
  max-width: 120rpx;
  vertical-align: middle;
}

.trip-info-location .flight-icon {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin: 0 20rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100%;
  vertical-align: middle;
}