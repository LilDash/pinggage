.flex-column {
  display: flex; 
  flex-direction: column;
}

.flex-row {
  display: flex; 
  flex-direction: row;
}

.trip-card {
  padding: 0 28rpx;
  border-left:solid 4px rgba(230, 67, 64, 0.8);
  margin:16px 0;
}


.user-info { 
  padding: 8px 0 0 0;
}

.user-info .avatar {
  width: 90rpx;
  height: 90rpx;
}

.user-info-profile {
  padding: 0 14px;
  color: #888888;
}

.user-info-name {
  font-size: 28rpx;
  color: #444444;
  padding: 0 0 4px 0;
}

.user-info-tripcount {
  font-size: 22rpx;
}
.user-info-rating {
  font-size: 22rpx;
}
.user-info-publishtime {
  font-size: 22rpx;
}

.trip-info{
  padding: 8px 0;
  width: 70%;
}

.trip-info-location-city {
  display: inline-block;
  font-size: 28rpx;
  background-color: rgba(230, 67, 64, 0.8);
  padding: 6px 10px;
  color:#fff;
  border-radius: 8px;
  overflow: hidden;
  white-space:nowrap;   
  text-overflow: ellipsis; 
  max-width: 120rpx;
  vertical-align: middle;
}

.trip-info-location .flight-icon {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin: 0 20rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100%;
  vertical-align: middle;
}

.trip-info-time {
  font-size:28rpx;
  padding:10px 0;
  color:#888888;

}

.luggage-info {
  width: 30%;
  position:relative;
  top:-90rpx;
}

.luggage-info-price {
  font-size: 20rpx;
  color: #888888;
  /* line-height: 18rpx; */
  padding: 0 0 20rpx 0;
}

.luggage-info-price-amount {
  font-size: 38rpx;
  color: rgba(230, 67, 64, 0.8);
}

.luggage-info-capacity {
  line-height: 18rpx;
}

.luggage-info-capacity-bar {
  width: 100%;
}

.luggage-info-capacity text {
  font-size: 20rpx;
  color: #888888;
}

.luggage-info-capacity .luggage-info-capacity-remain {
  font-size: 28rpx;
  color: rgba(230, 67, 64, 0.8);
}